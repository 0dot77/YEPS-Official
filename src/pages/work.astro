---
import Layout from "../layouts/Layout.astro";
---

<Layout title="YEPS">
  <main>
    <h1 class="text-gradient">Work</h1>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 100%;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 40%;
    background-position: 0%;
  }
</style>
